@model MentorPlatform.Application.Commons.Models.Mail.EmailMentorRequestStatusChangedModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Mentor Request Status Update</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            background-color: #fff;
            padding: 24px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
        }

        .header {
            text-align: center;
            color: #444;
            margin-bottom: 24px;
        }

        .status-box {
            display: flex;
            justify-content: space-between;
            padding: 16px;
            border: 1px solid #aaa;
            border-radius: 4px;
            background-color: #fafafa;
            margin: 20px 0;
        }

        .status-item {
            flex: 1;
            text-align: center;
        }

            .status-item + .status-item {
                border-left: 1px dashed #ccc;
            }

        .note {
            background-color: #fffbe6;
            border: 1px solid #ffe58f;
            padding: 12px;
            border-radius: 4px;
            margin: 20px 0;
        }

        .footer {
            font-size: 12px;
            color: #777;
            text-align: center;
            margin-top: 32px;
        }

        a {
            color: #0066cc;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="header">MENTOR REQUEST STATUS UPDATED</h2>

        <p>Hello <strong>@Model.RecipientName</strong>,</p>
        <p>Your request to become a mentor on <strong>@Model.AppName</strong> has been updated. See the details below:</p>

        <div class="status-box">
            <div class="status-item">
                <p><strong>Old Status</strong></p>
                <p>@Model.OldStatus</p>
            </div>
            <div class="status-item">
                <p><strong>New Status</strong></p>
                <p>@Model.NewStatus</p>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Note))
        {
            <div class="note">
                <p><strong>Admin's Note:</strong></p>
                <p>@Model.Note</p>
            </div>
        }

        <p>
            If you have any questions or need further assistance, feel free to contact us at
            <a href="mailto:@Model.SupportEmail">@Model.SupportEmail</a>.
        </p>

        <p class="footer">
            Thank you,<br />
            The @Model.AppName Team
        </p>
    </div>
</body>
</html>
