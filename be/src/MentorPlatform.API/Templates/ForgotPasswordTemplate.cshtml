@model MentorPlatform.Application.Commons.Models.Mail.EmailForgotPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Password Reset</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
            color: #333;
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            background-color: #fff;
            padding: 24px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
        }

        .header {
            text-align: center;
            color: #444;
            margin-bottom: 24px;
        }

        .code-box {
            display: inline-block;
            font-size: 32px;
            letter-spacing: 8px;
            padding: 12px 24px;
            border: 2px dashed #aaa;
            border-radius: 4px;
            background-color: #fafafa;
        }

        .footer {
            font-size: 12px;
            color: #777;
            text-align: center;
            margin-top: 32px;
        }

        a {
            color: #0066cc;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="header">RESET YOUR PASSWORD</h2>
        <p>Hello <strong>@Model.RecipientName</strong>,</p>
        <p>We received a request to reset the password for your <strong>@Model.AppName</strong> account. To proceed, please use the following code:</p>

        <div style="text-align:center; margin:30px 0;">
            <span class="code-box">@Model.Code</span>
        </div>

        <p>This code will expire in @Model.ExpireMinutes minutes. If you did not request a password reset, you can safely ignore this email.</p>
        <hr />

        <p class="footer">
            If you have any questions or need assistance, feel free to contact us at
            <a href="mailto:@Model.SupportEmail">@Model.SupportEmail</a>.
        </p>
    </div>
</body>
</html>
